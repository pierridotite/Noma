{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NOMA",
  "scopeName": "source.noma",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#builtins" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.noma",
          "match": "//.*$"
        },
        {
          "name": "comment.block.noma",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.noma" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.noma",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.noma",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.noma",
          "match": "\\b(if|else|while|for|return|until|optimize|minimize|batch|in)\\b"
        },
        {
          "name": "keyword.declaration.noma",
          "match": "\\b(fn|let|learn|struct)\\b"
        },
        {
          "name": "keyword.other.noma",
          "match": "\\b(as|alloc|free|realloc|reset_optimizer|load_csv|save_csv|load_safetensors|save_safetensors)\\b"
        },
        {
          "name": "storage.type.noma",
          "match": "\\b(tensor|f64|f32|i32|i64)\\b"
        },
        {
          "name": "constant.language.boolean.noma",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.noma",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.noma" }
          }
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.noma",
          "match": "\\b(sigmoid|relu|tanh|exp|log|sqrt|abs|sin|cos|tan|pow|min|max|floor|ceil|sum|mean|dot|matmul|print|rand|rand_uniform|rand_normal|rand_tensor|rand_normal_tensor|xavier_init|he_init)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.noma",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.noma",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.noma",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.noma",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.noma",
          "match": "(\\*\\*|\\+|-|\\*|/|%|\\^)"
        },
        {
          "name": "keyword.operator.assignment.noma",
          "match": "="
        },
        {
          "name": "keyword.operator.cast.noma",
          "match": "\\bas\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.noma",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.noma",
          "match": ";"
        },
        {
          "name": "punctuation.section.braces.begin.noma",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.noma",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.brackets.begin.noma",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.noma",
          "match": "\\]"
        },
        {
          "name": "punctuation.section.parens.begin.noma",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.noma",
          "match": "\\)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.noma",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
